#!/usr/bin/env node

var engrafo = require("../index.js");
var program = require('commander');

program
  .version('0.0.1')
  .parse(process.argv);

let texPath = program.args[0];
engrafo.render(texPath, (err, htmlPath) => {
  if (err) {
    console.error("Engrafo rendering failed:", err);
    process.exit(1);
  }
  console.log("ðŸ’ƒ Document successfully rendered to", htmlPath);
});
