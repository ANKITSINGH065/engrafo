#!/bin/bash
DIR=$(dirname "$1")
DIR="$(cd "$DIR" && pwd)" #Â make absolute
FILENAME=$(basename "$1")

exec docker run \
    -v "$DIR":/workdir -w /workdir \
    --entrypoint "" \
    engrafo \
        pandoc \
        --from latex+raw_tex \
        --to json \
        --standalone \
        --mathjax \
        "$FILENAME"
